<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <id>package</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>true</includeBaseDirectory>
    <fileSets>
        <!-- output: bin -->
        <fileSet>
            <outputDirectory>bin</outputDirectory>
            <directory>${basedir}/src/main/assembly/bin</directory>
            <fileMode>0755</fileMode>
            <includes>
                <include>**.sh</include>
                <include>**.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>config</outputDirectory>
            <directory>${basedir}/src/main/assembly/config</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>application-*.yml</include>
                <include>application-*.properties</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>config</outputDirectory>
            <directory>${project.parent.basedir}/sqlhelper-cli/src/main/resources</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>logback.yml</include>
            </includes>
        </fileSet>

        <!-- output: lib-->
        <fileSet>
            <outputDirectory>logs</outputDirectory>
            <directory>${basedir}/src/main/assembly/logs</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>./</include>
            </includes>
        </fileSet>

        <!-- output: lib-->
        <fileSet>
            <outputDirectory>lib</outputDirectory>
            <directory>${project.parent.basedir}/sqlhelper-cli/target</directory>
            <fileMode>0755</fileMode>
            <includes>
                <include>sqlhelper-cli.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>lib/drivers</outputDirectory>
            <directory>${basedir}/src/main/assembly/lib/dirvers</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>./</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>lib/drivers</outputDirectory>
            <directory>${project.parent.basedir}/sqlhelper-cli/target/dependencies/drivers</directory>
            <fileMode>0644</fileMode>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>